<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar -->
    <style name="toolbar">
        <item name="android:textColor">@color/colorAccentWhite</item>
        <item name="android:textSize">@dimen/auth_activity_size_title</item>

    </style>

    <!-- _______________________AUTH ACTIVITY_______________________ -->

    <!-- Auth activity txt -->
    <style name="auth_activity_txt">
        <item name="android:textColor">@color/colorAccentWhite</item>
        <item name="android:layout_marginStart">@dimen/auth_activity_margin_start</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Auth activity title -->
    <style name="auth_activity_title" parent="auth_activity_txt">
        <item name="android:textSize">@dimen/auth_activity_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Auth activity subtitle -->
    <style name="auth_activity_subtitle" parent="auth_activity_txt">
        <item name="android:textSize">@dimen/auth_activity_size_subtitle</item>
        <item name="android:textStyle">italic</item>
    </style>


    <!-- Auth activity button BASE -->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/auth_activity_padding_button</item>
        <item name="android:textSize">@dimen/auth_activity_size_text_button</item>
        <item name="android:textColor">@color/colorAccentWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/auth_activity_margin_start</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- Auth activity button FACEBOOK -->
    <style name="FacebookButtonStyle" parent="BaseButtonStyle" >
        <item name="android:background">@drawable/button_facebook</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
        <item name="android:text">@string/auth_activity_button_facebook</item>
    </style>

    <!-- Auth activity button GOOGLE -->
    <style name="GoogleButtonStyle" parent="BaseButtonStyle" >
        <item name="android:background">@drawable/button_google</item>
        <item name="android:drawableStart">@drawable/ic_google</item>
        <item name="android:text">@string/auth_activity_button_google</item>
    </style>

    <!-- _______________________NAVIGATION DRAWER_______________________ -->

    <!-- Nav Drawer Txt -->
    <style name="nav_drawer_txt">
        <item name="android:textColor">@color/colorAccentWhite</item>
    </style>

    <!-- Nav Drawer Title -->
    <style name="nav_drawer_title" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Nav Drawer Name -->
    <style name="nav_drawer_name" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_name</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- Nav Drawer Email -->
    <style name="nav_drawer_email" parent="nav_drawer_txt">
        <item name="android:textSize">@dimen/nav_drawer_size_email</item>
    </style>

    <!-- _______________________ITEM LIST RESTAURANT_______________________ -->

    <!-- Item Restaurant List Name Txt -->
    <style name="item_list_restaurant_name_txt">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">@dimen/item_list_restaurant_size_name</item>
    </style>

    <!-- Item Restaurant List Description Base Txt -->
    <style name="item_list_restaurant_description_base_txt">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccentGrey</item>
        <item name="android:textSize">@dimen/item_list_restaurant_size_description</item>
    </style>

    <!-- Item Restaurant List Type Txt -->
    <style name="item_list_restaurant_type_txt" parent="item_list_restaurant_description_base_txt">
        <item name="android:layout_marginTop">@dimen/item_list_restaurant_margin_default</item>
    </style>

    <!-- Item Restaurant List Address Txt -->
    <style name="item_list_restaurant_address_txt" parent="item_list_restaurant_description_base_txt">
        <item name="android:layout_marginStart">@dimen/item_list_restaurant_margin_start_address</item>
    </style>

    <!-- Item Restaurant List Hours Txt -->
    <style name="item_list_restaurant_hours_txt" parent="item_list_restaurant_description_base_txt">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/item_list_restaurant_margin_default</item>
    </style>

    <!-- Item Restaurant List Distance Txt -->
    <style name="item_list_restaurant_distance_txt">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/item_list_restaurant_size_distance</item>
        <item name="android:layout_marginEnd">@dimen/item_list_restaurant_margin_end_distance</item>
    </style>

    <!-- Item Restaurant List Number Rating Txt -->
    <style name="item_list_restaurant_number_rating_txt">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:layout_marginBottom">@dimen/item_list_restaurant_margin_bottom_number_rating</item>
        <item name="android:textSize">@dimen/item_list_restaurant_size_description</item>
    </style>

    <!-- Item Restaurant List Stars 2 and 3 Image -->
    <style name="item_list_restaurant_stars_2_3_image">
        <item name="android:src">@drawable/ic_star_2</item>
        <item name="android:layout_marginEnd">@dimen/item_list_restaurant_margin_end_stars</item>
    </style>

    <!-- Item Restaurant List People Rating Image -->
    <style name="item_list_restaurant_people_rating_image">
        <item name="android:src">@drawable/ic_person_outline_black_24dp</item>
        <item name="android:layout_marginEnd">@dimen/item_list_restaurant_margin_end_people_rating</item>
    </style>

    <!-- Item Restaurant List Illustration Image -->
    <style name="item_list_restaurant_illustration_image">
        <item name="android:src">@drawable/image_restaurant</item>
        <item name="android:layout_marginEnd">@dimen/item_list_restaurant_margin_end_illustration</item>
    </style>

    <!-- _______________________ITEM LIST WORKMATES_______________________ -->

    <!-- Item Restaurant Workmates Image -->
    <style name="item_list_workmates_image">
        <item name="android:src">@drawable/ic_person_outline_black_24dp</item>
        <item name="android:layout_margin">@dimen/item_list_workmates_margin_image</item>
    </style>

    <!-- Item Restaurant Workmates Choose Txt -->
    <style name="item_list_workmates_choose_txt">
        <item name="android:layout_marginStart">@dimen/item_list_workmates_margin_start_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">@dimen/item_list_workmates_size_txt</item>
    </style>

    <!-- Item Restaurant Workmates No Choose Txt -->
    <style name="item_list_workmates_no_choose_txt">
        <item name="android:layout_marginStart">@dimen/item_list_workmates_margin_start_txt</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/item_list_workmates_size_txt</item>
    </style>

</resources>
