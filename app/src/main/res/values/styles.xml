<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="auth_activity_title">
        <item name="android:textColor">@color/colorAccentWhite</item>
        <item name="android:textSize">70dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Facebook Button style -->
    <style name="FacebookButtonStyle" parent="BaseButtonStyle" >
        <item name="android:background">@color/com_facebook_blue</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
    </style>

    <style name="auth_activity_subtitle">
        <item name="android:textColor">@color/colorAccentWhite</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">Sign in with Facebook</item>
    </style>

    <!-- Log Button Style -->
    <style name="LogButtonStyle" >
        <item name="android:layout_margin">30dp</item>

    </style>


</resources>
